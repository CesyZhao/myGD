extends layout_bg

block content
        include templates/header
        //登录模块
        div.loginPanel
            div.row
                //div.col-md-7.col-md-offset-1.jumbotron.info
                //    h1 There will be your second home
                div.col-md-4.col-sm-8.col-sm-offset-2.col-md-offset-4.login_form
                    //登录表单
                    div.box
                        form(method="post",action="login")
                            div.text-center
                                h3.glyphicon.glyphicon-user
                            h3.text-center 用户登录
                            //div.msgBox
                            //    -if(error)
                            //        div.alert.alert-danger #{error}
                            //    -else if(success)
                            //        div.alert.alert-success #{success}
                            div.form-group
                                div.input-group.form-item
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-user
                                    input(class="form-control",type="text",name="username",placeholder="请输入用户名")
                            div.form-group
                                div.input-group.form-item
                                    span.input-group-addon
                                        span.glyphicon.glyphicon-lock
                                    input(class="form-control",type="password",name="password",placeholder="请输入密码")
                            div.form-group
                                button.btn.btn-block.btn-default 登录
                            div.form-group
                                div.tips.col-md-9
                                    span 新来的？点击
                                    a(href="../users/toRegister") 这里
                                    span 注册
                                div.tips.col-md-3
                                    a(href="") 忘记密码
            -if(error)
                script.
                    swal('用户名或者密码错误!','','error')

        include templates/footer