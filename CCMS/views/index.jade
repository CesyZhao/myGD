extends layout

block content
    div.container
        //导航
        include templates/header
        //用户面板
        div.jumbotron.userPanel
            -if(!user)
                div.container
                    div.avatar_outer
                        div.avatar_inner
                            div.avatar.nologin
                            p 你还没有登录，请先点击右上方按钮登录
            -else
                div.container.row.logined
                    div.row.col-md-3
                        div.avatar
                    div.basicInfo.col-md-9
                        div.row.infoRow
                            div.col-md-3 用户名:#{user.username}
                            div.col-md-3 真&nbsp;&nbsp;&nbsp;&nbsp;名:#{user.realname}
                        div.row.infoRow
                            div.col-md-3 性&nbsp;&nbsp;&nbsp;&nbsp;别:#{user.gender}
                            div.col-md-3 年&nbsp;&nbsp;&nbsp;&nbsp;龄:#{user.age}
                        div.row.infoRow
                            div.col-md-12 个人介绍:#{user.description}
                        div.row.infoRow
                            div.col-md-12 我的社团:
                                each item in ass
                                    span  #{item.name}

        //新闻模块
        div.newsPanel.row
            div.container
                //新闻图片轮播
                div(class="news_carousel col-md-9 carousel slide",id="news_carousel",data-slide="carousel")
                    div.carousel-inner
                        div.item.active
                            img
                            div.carousel-caption
                    ol.carousel-indicators
                        li(data-target="#news_carousel", data-slide="0",class="active")
                //新闻列表
                div.news_list.col-md-3
        //社团列表
        div.listPanel
            //第一行
            div.row
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
            //第二行
            div.row
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
                div.item.col-md-3
                    a.thumbnail
                        img
                        div.caption
                            p
        //页尾
        include templates/footer
